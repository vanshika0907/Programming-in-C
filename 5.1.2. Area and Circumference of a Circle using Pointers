#include<stdio.h>

void area_peri(float, float*, float*);
  
int main() {float radius, area, perimeter;
			scanf("%f", &radius);
			area_peri(radius, &area, &perimeter);
			printf("%.2f\n", area);
			printf("%.2f\n", perimeter);
	
	
	
}

void area_peri(float r, float *area, float *peri        ) {
	const float pi = 3.14;
	*area = pi * r * r;
	*peri = 2 * pi * r;	
	
	
}
