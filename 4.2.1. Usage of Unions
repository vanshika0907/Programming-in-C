#include <stdio.h>

union test {
	// initialize required variables
int x;
int y;
};

	// write your code here
int main()
{
	union test Test;
	printf("x: ");
	//accept user input for x and assign it to the union variable x 
	scanf("%d", &Test.x);
	
	printf("After making x = %d:\nx= %d y= %d\n", Test.x, Test.x, Test.y          );
	printf("y: ");
	//accept user input for y and assign it to the union variable y
	scanf("%d", &Test.y);



	printf("After making y = %d:\nx= %d y= %d",Test.y, Test.x, Test.y            );
 	return 0;
}
